<%- include('partials/header.ejs') %>

        <main>
            <div class="container">
                <h1>Posts</h1>
                <div class="posts">

                    <% if(locals.posts) { %>
                        <% posts.forEach((post) => { %> 
                            <div class="post">
                                <div>
                                    <a href="/posts/<%= post.title.toLowerCase().split(' ').join('-') %>"><h2><%= post.title %></h2></a>
                                    <form id="deleteForm" action="/delete" method="POST">
                                        <input type="hidden" name="postId" value="<%= post.id %>">
                                        <button id="deleteButton"></button>
                                    </form>
                                </div>
                                <hr>
                                <p><%= post.content %></p>

                                <div class="edit-div">
                                    <a class="edit-button" href="/editpost/<%= post.title.toLowerCase().split(' ').join('-') %> %>">EDIT</a>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </main>

<%- include('partials/footer.ejs') %>